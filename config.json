{
  "inputDir": "./input",
  "outputDir": "./output",
  "paperFormat": "A4",
  "margins": {
    "top": "20mm",
    "right": "20mm",
    "bottom": "20mm",
    "left": "20mm"
  },
  "options": {
    "printBackground": true,
    "generateTOC": false,
    "includePageNumbers": true,
    "recursive": true,
    "skipConfirmation": false,
    "openOutputFolder": true
  },
  "mermaid": {
    "theme": "default",
    "fontFamily": "arial",
    "fontSize": 16
  },
  "logging": {
    "verbose": true,
    "logFile": "conversion.log"
  }
}