{
  "name": "markdown-pdf-converter",
  "version": "1.0.0",
  "description": "Markdown to PDF converter with Mermaid support",
  "main": "convert.js",
  "bin": "convert.js",
  "scripts": {
    "setup": "npm install",
    "convert": "node convert.js",
    "build": "pkg . --target node22-win-x64 --output dist/markdown-pdf-converter.exe"
  },
  "dependencies": {
    "glob": "^11.0.0",
    "highlight.js": "^11.9.0",
    "marked": "^17.0.0",
    "marked-highlight": "^2.2.0",
    "puppeteer": "^24.0.0"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.14.0"
  },
  "keywords": [
    "markdown",
    "pdf",
    "mermaid",
    "converter"
  ],
  "author": "ynkmg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ynkmgit/markdown-pdf-converter.git"
  },
  "homepage": "https://github.com/ynkmgit/markdown-pdf-converter#readme",
  "bugs": {
    "url": "https://github.com/ynkmgit/markdown-pdf-converter/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "pkg": {
    "assets": [
      "templates/**/*",
      "input/**/*",
      "config.json"
    ],
    "targets": [
      "node22-win-x64"
    ],
    "outputPath": "dist"
  }
}
